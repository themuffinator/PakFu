{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PakFu (GUI) - Windows",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\build\\src\\pakfu.exe",
      "args": [
        "-platform",
        "windows:nodirectwrite"
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Meson: build",
      "stopAtEntry": false,
      "console": "internalConsole",
      "environment": [
        {
          "name": "PAKFU_DISABLE_WELCOME_BACKDROP_TEXT",
          "value": "1"
        },
        {
          "name": "PAKFU_ALLOW_MULTI_INSTANCE",
          "value": "1"
        }
      ]
    },
    {
      "name": "PakFu (GUI) - Linux/macOS",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/src/pakfu",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "internalConsole",
      "environment": [],
      "linux": {
        "MIMode": "gdb"
      },
      "osx": {
        "MIMode": "lldb"
      }
    }
  ]
}
